<div id="users"></div>

<script type="text/javascript">
  $(function() {
    $('.no_javascript').hide();
    window.router = new Gnugk.Routers.UsersRouter({users: <%= @users.to_json.html_safe -%>});
    Backbone.history.start();
  });
</script>

<!-- Everything below here is scaffold crud used when javascript is disabled -->

<div class="no_javascript">
<h1>Listing users</h1>
<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New User', new_user_path %>
</div>
