<%= form_for @gkconfig, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @gkconfig.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gkconfig.errors.count, "error") %> prohibited this gkconfig from being saved:</h2>

      <ul>
      <% @gkconfig.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :section, :class => 'control-label' %><br />
    <%= f.text_field :section, :class => 'text_field' %>
  </div>
  <div class="field control-group">
    <%= f.label :key, :class => 'control-label' %><br />
    <%= f.text_field :key, :class => 'text_field' %>
  </div>
  <div class="field control-group">
    <%= f.label :value, :class => 'control-label' %><br />
    <%= f.text_field :value, :class => 'text_field' %>
  </div>
  <div class="actions form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                gkconfigs_path, :class => 'btn' %>
  </div>
<% end %>
